		fieldSection = new JTextField();
		fieldSection.setBounds(170, 200, 100, 30);
		
		confirm = new JButton("Confirmer");
		confirm.setBounds(170, 300, 100, 25);
		confirm.addActionListener(this);

		f.add(title);
		f.add(fieldFirstName);
		f.add(fieldName);
		f.add(fieldAge);
		f.add(fieldSection);
		f.add(labelName);
		f.add(labelFirstName);
		f.add(labelAge);
		f.add(labelSection);
		f.add(confirm);
		f.setSize(450, 500);
		f.setLayout(null);
		f.setVisible(true);
	}

